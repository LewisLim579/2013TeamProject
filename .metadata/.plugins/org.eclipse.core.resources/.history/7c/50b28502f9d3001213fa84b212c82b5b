package com.jung;

import android.app.Activity;
import android.content.Context;
import android.graphics.Canvas;
import android.graphics.Color;
import android.graphics.Paint;
import android.os.Bundle;
import android.util.AttributeSet;
import android.view.ContextMenu;
import android.view.MenuItem;
import android.view.View;
import android.view.ContextMenu.ContextMenuInfo;
import android.widget.Button;
import android.widget.TextView;

public class ContextMenuActivity extends Activity {
    /** Called when the activity is first created. */
	Button btn;
	TextView textView;
	CustomView customView;
	static int size=40;
    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.main);
        btn = (Button)findViewById(R.id.btn);
        textView = (TextView)findViewById(R.id.textView);
        customView = (CustomView)findViewById(R.id.customView);
        
        registerForContextMenu(btn);
        registerForContextMenu(textView);
        registerForContextMenu(customView);
        
        
    }
    
    @Override
    public void onCreateContextMenu(ContextMenu menu, View v,
    		ContextMenuInfo menuInfo) {
    	// TODO Auto-generated method stub
    	super.onCreateContextMenu(menu, v, menuInfo);
    	if(v==btn){
    		menu.setHeaderTitle("Select Color");
    		menu.add(0, 6, 0, "BLUE");
    		menu.add(0, 7, 0, "RED");
    		menu.add(0, 8, 0, "GREEN");
    	}
    	if(v == textView){
    		menu.setHeaderTitle("Select BackgroundColor");
    		menu.add(0, 9, 0, "BLUE");
    		menu.add(0, 10, 0, "RED");
    		menu.add(0, 11, 0, "GREEN");
    	}
    }
    @Override
    public boolean onContextItemSelected(MenuItem item) {
    	// TODO Auto-generated method stub
    	switch(item.getItemId()){
    	case 1:
    		size = 10;
    		customView.invalidate();
    		return true;
    	case 2:
    		size = 20;
    		customView.invalidate();
    		return true;
    	case 3:
    		size = 30;
    		customView.invalidate();
    		return true;
    	case 4:
    		size = 40;
    		customView.invalidate();
    		return true;
    	case 5:
    		size = 50;
    		customView.invalidate();
    		return true;
    	case 6:
    		btn.setTextColor(Color.BLUE);
    		return true;	
    	case 7:
    		btn.setTextColor(Color.RED);
    		return true;	
    	case 8:
    		btn.setTextColor(Color.GREEN);
    		return true;	
    	case 9:
    		textView.setBackgroundColor(Color.BLUE);
    		return true;
    	case 10:
    		textView.setBackgroundColor(Color.RED);
    		return true;
    	case 11:
    		textView.setBackgroundColor(Color.GREEN);
    		return true;	
    	}
    	return false;
    }
    
}
class CustomView extends View{
	public CustomView(Context context) {
		// TODO Auto-generated constructor stub
		super(context);
	}
	public CustomView(Context context,AttributeSet attrs) {
		// TODO Auto-generated constructor stub
		super(context, attrs);
	}
	@Override
	protected void onDraw(Canvas canvas) {
		// TODO Auto-generated method stub
		Paint p = new Paint();
		switch(ContextMenuActivity.size){
		case 10:
		p.setTextSize(10);
		break;
		case 20:
    		p.setTextSize(20);
    		break;
		case 30:
    		p.setTextSize(30);
    		break;
		case 40:
    		p.setTextSize(40);
    		break;
		case 50:
    		p.setTextSize(50);
    		break;
		
		}
		
		p.setColor(Color.WHITE);
		String msg = "CustomView ContextMenu";
		canvas.drawText(msg, 0, 100, p);
	}
	@Override
	protected void onCreateContextMenu(ContextMenu menu) {
		// TODO Auto-generated method stub
		
		menu.setHeaderTitle("Select Size");
		menu.add(0, 1, 0, "10");
		menu.add(0, 2, 0, "20");
		menu.add(0, 3, 0, "30");
		menu.add(0, 4, 0, "40");
		menu.add(0, 5, 0, "50");
	}
}